<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./head %>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
</head>
<body>
    <header>
        <% include ./header %>
    </header>
 <div class="container">
    <div ng-app="Product">
    	<h1>This is shop page</h1>
    	<div ng-controller = "ProductsController" ng-init ="listProduct()" class="product-list">
   			<ul class = "item-list">
				<li ng-repeat="t in Topics" >
					<a href="#">
						<img src="{{t.productImg}}" alt="img01">
						<h4 class="description">ชื่อ : {{t.productName}}</h4>
						<h4 class="price">ราคา: {{t.unitPrice}}</h4>
						<button class="button"><span>BUY</span></button>
					</a>
				</li>
			</ul>
    	</div>
    </div>
 </div><!-- container -->
 <footer>
    <% include ./footer %>
</footer>
</body>
<script type="text/javascript" src="./javascripts/jquery-1.12.4.js"></script>
<script type="text/javascript" src="./Itemslider/js/jquery.catslider.js"></script>
<script type="text/javascript" src="./javascripts/angular.js"></script>
<script type="text/javascript">
</script>
<script>
	var app = angular.module("Product",[]);
	app.controller("ProductsController",function($scope,$http){
		$scope.title = "Hello Webboard";
		$scope.Topics = [];
		$scope.listProduct = function(){
			var url = "./product";
			$http.get(url).success(function(data){
			$scope.Topics = data;
			angular.forEach(data,function(value,key){
				console.log(key + ': ' + value);
			});
			}).error(function(data){
				alert("Error");
			})
		}
	})
</script>
</html>